        android:layout_height="400dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:outlineSpotShadowColor="#22aab6"
        android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_card"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <com.iambedant.text.OutlineTextView
                        android:id="@+id/tgl_upcomming"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="01"
                        android:textColor="#000000"
                        android:fontFamily="@font/gilroybold"
                        android:textAlignment="center"
                        android:textSize="250dp"
                        app:outlineColor="#000000"
                        app:outlineWidth="5"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/hari_upcomming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hari Raya Idul Fitri"
                    android:textSize="25dp"
                    android:fontFamily="@font/gilroylight"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:textStyle="bold"
